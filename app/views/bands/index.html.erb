<p id="notice"><%= notice %></p>

<h1>Listing Bands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fb</th>
      <th>Fb name</th>
      <th>Likes count</th>
      <th>Ta count</th>
      <th>Pic url</th>
      <th>Follower count</th>
      <th>Following count</th>
      <th>Tweets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.fb_id %></td>
        <td><%= band.fb_name %></td>
        <td><%= band.likes_count %></td>
        <td><%= band.ta_count %></td>
        <td><%= band.pic_url %></td>
        <td><%= band.follower_count %></td>
        <td><%= band.following_count %></td>
        <td><%= band.tweets %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

