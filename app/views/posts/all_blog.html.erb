<content class="blogtitle">
	<lowthird class="special-menu">
		<%= link_to "GalenHome", "/", class: "land-link" %>
	</lowthird>
	<lowthird>
		<%= image_tag "GalenOnlineLogo-medium.png" %>
	</lowthird>
	<lowthird class="special-menu">
		<%= link_to "Blog", posts_blog_path, class: "land-link" %>
	</lowthird>
</content>
<content class="box nosides">
	<portal class="blog-container">
		<% @posts.each do |p| %>
			<content class="blog">
				<portal class="blog-container">
					<card class="summary" style="background-image: url('<%= p.main_image %>'); background-size: cover;">
						<info>
							<%= link_to p.title, p, class: "title" %>
							<start class="small-meta">
								<mincontent>
									<% if p.user.nil? %>
									By Unkown
									<% else %>
									By <%= p.user.username %>
									<% end %>
								</mincontent>
								<mincontent>
									<%= p.formatted_created_time %>
								</mincontent>
							</start>
						</info>
					</card>
				</portal>
			</content>
		<% end %>
	</portal>
	<content class="blog nosides">
		<%= will_paginate @posts %>
	</content>
</content>
